<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" style="-fx-background-color: #FFE2A1;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="twisk.controllers.ControllerNavigateur">
   <children>
      <Button fx:id="navButtonAccueil" mnemonicParsing="false" onAction="#accueil" prefHeight="100.0" prefWidth="100.0" onMouseEntered="#mouseEnteredAccueil" onMouseExited="#mouseExitAccueil" style="-fx-background-color: #d02985; -fx-text-fill: white; -fx-background-radius: 0;" text="Home">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ressources/images/home.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="navButtonAjouterEtape" layoutX="10.0" layoutY="150.0" mnemonicParsing="false" onAction="#ajouterEtape" onMouseEntered="#mouseEnteredAjouterEtape" onMouseExited="#mouseExitAjouterEtape" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: #d02985; -fx-text-fill: white; -fx-background-radius: 0;" text="Add">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ressources/images/plus.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="navButtonInformations" layoutX="10.0" layoutY="400.0" mnemonicParsing="false" onAction="#informations" onMouseEntered="#mouseEnteredInformations" onMouseExited="#mouseExitInformations" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: #d02985; -fx-text-fill: white; -fx-background-radius: 0;" text="tips">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ressources/images/tips.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</VBox>

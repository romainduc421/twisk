<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<Dialog fx:id="dialog" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="twisk.controllers.ControllerDelaiUniforme" title="Modifier Delai - Ecart Temps" >
    <dialogPane>
        <DialogPane prefWidth="300">
            <content>
                <VBox spacing="10.0">
                    <HBox>
                        <children>
                            <Label text="Delay :  " />
                            <TextField fx:id="delai" promptText="Delay (in sec. ) " prefWidth="185.0" />
                        </children>
                        <VBox.margin>
                            <Insets top="10.0" left="20.0" />
                        </VBox.margin>
                    </HBox>
                    <HBox>
                        <children>
                            <Label text="Time-gap : " />
                            <TextField fx:id="ecartTemps" prefHeight="25.0" prefWidth="150.0" promptText="Time-gap (in sec. ) " />
                        </children>
                        <VBox.margin>
                            <Insets left="20.0" />
                        </VBox.margin>
                    </HBox>
                </VBox>
            </content>
            <buttonTypes>
                <ButtonType fx:id="confirm" fx:constant="OK" />
                <ButtonType fx:id="cancel" fx:constant="CANCEL" />
            </buttonTypes>
        </DialogPane>
    </dialogPane>
</Dialog>
